@model BazaarTableModel

<div class="flex flex-col items-center">
    <button class="button scale-75 w-24 bg-secondary-color/75" hx-get="@(UtilityP.Routes[RouteP.MODAL_BAZAAR_BUY_ADD])"
        hx-target="#@(UtilityP.HTMX[Target.MODAL_CONTENT])" hx-indicator="@(UtilityP.HTMX[Target.LOADING_ICON])"
        hx-vals='{"myVal": "My Value"}'>
        <span>ADD</span>
    </button>
    <table class="table text-[0.5rem] m-0">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col" class="border-top-black">Name</th>
                <th scope="col" class="border-top-black">Price</th>
                <th scope="col" class="border-top-black">Type</th>
                <th scope="col" class="border-top-black">Remove?</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="">
            @foreach (BazaarItem item in Model.BazaarItems)
            {
                <tr class="transition table-row ">
                    <td>
                        <button class="invisible rotate-12 px-1 font-extrabold bg-red-500 border border-black">
                            X
                        </button>
                    </td>
                    <td>
                        <button class="invisible rotate-12 px-1 font-extrabold bg-green-500 border border-black">
                            EDIT
                        </button>
                    </td>
                    <td>@(item.Name)</td>
                    <td class="text-right">@(item.Price)</td>
                    <td>@(item.OrderType)</td>
                    <td>@(item.RemovedAfter)</td>
                    <td class="group">
                        <button
                            class="table-row-hidden transition invisible rotate-12 px-1 font-extrabold bg-red-500 border border-black">
                            X
                        </button>
                    </td>
                    <td class="group">
                        <button
                            class="table-row-hidden mr-1 transition invisible rotate-12 px-1 font-extrabold bg-green-500 border border-black">
                            EDIT
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>